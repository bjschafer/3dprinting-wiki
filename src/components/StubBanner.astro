---
/**
 * StubBanner component for marking articles that need improvement.
 * Import and use in your MDX files: <StubBanner />
 *
 * Usage in frontmatter:
 * ---
 * stub: true
 * ---
 *
 * Or manually add the component to show the banner.
 */
interface Props {
    /** Custom message to display */
    message?: string;
}

const {
    message = "This article is a stub and needs expansion. Contributions are welcome!",
} = Astro.props;
---

<aside class="stub-banner" role="note" aria-label="Article stub notice">
    <div class="stub-icon">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
        >
            <path d="M12 20h9"></path>
            <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"
            ></path>
        </svg>
    </div>
    <div class="stub-content">
        <strong class="stub-title">Stub Article</strong>
        <p class="stub-message">{message}</p>
    </div>
</aside>

<style>
    .stub-banner {
        display: flex;
        gap: 1rem;
        padding: 1rem 1.25rem;
        margin: 1.5rem 0;
        background: linear-gradient(
            135deg,
            hsl(45, 80%, 15%) 0%,
            hsl(35, 70%, 12%) 100%
        );
        border: 1px solid hsl(45, 70%, 30%);
        border-left: 4px solid hsl(45, 90%, 50%);
        border-radius: 0.5rem;
    }

    .stub-icon {
        flex-shrink: 0;
        color: hsl(45, 90%, 50%);
    }

    .stub-content {
        flex: 1;
    }

    .stub-title {
        display: block;
        font-size: 0.95rem;
        color: hsl(45, 90%, 70%);
        margin-bottom: 0.25rem;
    }

    .stub-message {
        margin: 0;
        font-size: 0.9rem;
        color: hsl(45, 40%, 80%);
        line-height: 1.5;
    }

    /* Light mode adjustments */
    :root:not(.dark) .stub-banner {
        background: linear-gradient(
            135deg,
            hsl(45, 80%, 92%) 0%,
            hsl(35, 70%, 88%) 100%
        );
        border-color: hsl(45, 70%, 60%);
        border-left-color: hsl(45, 90%, 40%);
    }

    :root:not(.dark) .stub-icon {
        color: hsl(45, 90%, 35%);
    }

    :root:not(.dark) .stub-title {
        color: hsl(45, 80%, 25%);
    }

    :root:not(.dark) .stub-message {
        color: hsl(45, 40%, 30%);
    }
</style>
