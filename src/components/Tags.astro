---
/**
 * Tags component for displaying tags on documentation pages.
 * Import and use in your MDX files: <Tags />
 * Tags are read from the page's frontmatter.
 */
import { tagToSlug } from "../utils/tags";

interface Props {
    tags?: string[];
}

const { tags } = Astro.props;
---

{
    tags && tags.length > 0 && (
        <div class="tags-container">
            <span class="tags-label">Tags:</span>
            <div class="tags-list">
                {tags.map((tag) => (
                    <a href={`/tags/${tagToSlug(tag)}/`} class="tag">
                        {tag}
                    </a>
                ))}
            </div>
        </div>
    )
}

<style>
    .tags-container {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin: 1.5rem 0;
        padding: 1rem;
        background: var(--sl-color-bg-nav);
        border: 1px solid var(--sl-color-gray-5);
        border-radius: 0.5rem;
    }

    .tags-label {
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--sl-color-gray-2);
        white-space: nowrap;
    }

    .tags-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .tag {
        font-size: 0.85rem;
        padding: 0.25rem 0.75rem;
        background: var(--sl-color-gray-6);
        border-radius: 1rem;
        text-decoration: none;
        color: var(--sl-color-text);
        transition: all 0.2s ease;
    }

    .tag:hover {
        background: var(--sl-color-accent);
        color: var(--sl-color-black);
    }
</style>
